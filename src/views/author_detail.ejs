<%- include('includes/head'); %>
<%- include('includes/nav'); %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
                <div class="col-lg-12">
                    <h1 class="text-left"> Autor: <%= author.name %> </h1>
                    <p> <%= author.birth %> - <%= author.death %> </p>
                    <div style="margin-left: 20px; margin-top: 20px;">
                        <h4>Livros</h4>
                        <dl>
                            <% for(let i = 0; i < author_books.length; i++) { %>
                                <% const book = author_books[i] %> 
                                    <dt>
                                        <a href=<%= book.url %> > <%= book.title %> </a>
                                    </dt>
                                    <dd>
                                        <%= book.summary %> 
                                    </dd>
                            <% } %>
                            <% if (!author_books.length) { %>
                                <p> Este autor não têm livros cadastrados. </p> 
                            <% } %>
                        </dl>   
                    </div>
                </div>
                <hr>
                <div class="col-lg-2">
                    <% if(user) { %> 
                        <p>
                            <a class="text-danger" href=<%=author.url+'/delete'%>> <span class="font-weight-bold"> Deletar autor </span> </a>
                        </p>
                        <p>
                            <a class="text-warning" href=<%=author.url+'/update'%>> <span class="font-weight-bold"> Atualizar Autor </span> </a>
                        </p>
                    <% } %>
                </div>
        </div>
    </div>
<%- include('includes/footer'); %>